@model List<Proveedor>
<h1>Reporte de proveedores</h1>
<div>
    @if (Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>NRC</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proveedor in Model)
                {
                    <tr>
                        <td>@proveedor.Nombre</td>
                        <td>@proveedor.NRC</td>
                        <td>@proveedor.Direccion</td>
                        <td>@proveedor.Telefono</td>
                        <td>@proveedor.Email</td>
                        <td>
                            <a asp-controller="Proveedor" asp-action="Edit" asp-route-id="@proveedor.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="Proveedor" asp-action="Details" asp-route-id="@proveedor.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-controller="Proveedor" asp-action="Delete" asp-route-id="@proveedor.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este proveedor?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    h1 {
        color: #333;
        text-align: center;
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
        }

        .table thead {
            background-color: #28a745; /* Verde */
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #d4edda; /* Verde claro */
        }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
    }
</style>
