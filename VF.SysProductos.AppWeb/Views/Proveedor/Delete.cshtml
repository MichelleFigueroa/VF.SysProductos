@model Proveedor

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5>¿Seguro que deseas eliminar Proveedor?</h5>
    </div>
    <div class="card-body">
        <form asp-action="DeleteProveedor" method="post">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-sm-5">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" disabled />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="col-sm-5">
                    <label asp-for="NRC" class="form-label"></label>
                    <input asp-for="NRC" class="form-control" disabled />
                    <span asp-validation-for="NRC" class="text-danger"></span>
                </div>
                <div class="col-sm-7">
                    <label asp-for="Direccion" class="form-label"></label>
                    <input asp-for="Direccion" class="form-control" disabled />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="col-sm-5">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" disabled />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="col-sm-5">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
    </div>
</div>
